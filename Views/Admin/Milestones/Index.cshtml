@model IEnumerable<FipsReporting.Data.Milestone>
@{
    ViewData["Title"] = "Milestone Overview";
    ViewData["ActiveNav"] = "admin";
    ViewData["ActiveNavItem"] = "manage-milestones";
}

<div class="govuk-width-container">
    <div class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <!-- Vertical Navigation -->
            <div class="govuk-grid-column-one-quarter">
                <nav class="dfe-vertical-nav" data-module="dfe-vertical-nav">
                    <ul class="dfe-vertical-nav__section">
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "dashboard" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "Admin")">
                                Dashboard
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "manage-metrics" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "AdminPerformanceMetrics")">
                                Manage Metrics
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "manage-users" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "AdminUser")">
                                Manage Users
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "manage-milestones" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "AdminMilestones")">
                                Manage Milestones
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "manage-objectives" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "AdminObjectives")">
                                Manage Objectives
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="govuk-grid-column-three-quarters">
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-two-thirds">
                        <h1 class="govuk-heading-l">Milestone Overview</h1>
                        <p class="govuk-body-l">Monitor milestone progress and identify overdue items.</p>
                    </div>
                    <div class="govuk-grid-column-one-third">
                        <span class="govuk-tag govuk-tag--red">@ViewBag.OverdueCount Overdue</span>
                        <a href="@Url.Action("AllMilestones")" class="govuk-button govuk-button--secondary govuk-!-margin-top-2">View All Milestones</a>
                    </div>
                </div>

                @if (Model.Any())
                {
                    <div class="govuk-grid-row govuk-!-margin-top-4">
                        <div class="govuk-grid-column-full">
                            <h2 class="govuk-heading-m">Overdue Milestones</h2>
                            <table class="govuk-table">
                                <thead class="govuk-table__head">
                                    <tr class="govuk-table__row">
                                        <th scope="col" class="govuk-table__header">Product</th>
                                        <th scope="col" class="govuk-table__header">Milestone</th>
                                        <th scope="col" class="govuk-table__header">Target Date</th>
                                        <th scope="col" class="govuk-table__header">Status</th>
                                        <th scope="col" class="govuk-table__header">Priority</th>
                                        <th scope="col" class="govuk-table__header">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="govuk-table__body">
                                    @foreach (var milestone in Model)
                                    {
                                        <tr class="govuk-table__row">
                                            <td class="govuk-table__cell">
                                                <strong>@milestone.FipsId</strong>
                                            </td>
                                            <td class="govuk-table__cell">
                                                <strong>@milestone.Title</strong>
                                                @if (!string.IsNullOrEmpty(milestone.Description))
                                                {
                                                    <br />
                                                    <span class="govuk-body-s govuk-!-font-weight-normal">@milestone.Description</span>
                                                }
                                            </td>
                                            <td class="govuk-table__cell">
                                                @if (milestone.TargetDate.HasValue)
                                                {
                                                    <span class="govuk-body-m">@milestone.TargetDate.Value.ToString("dd MMM yyyy")</span>
                                                }
                                                else
                                                {
                                                    <span class="govuk-body-m govuk-!-color-grey">No date set</span>
                                                }
                                            </td>
                                            <td class="govuk-table__cell">
                                                <span class="govuk-tag govuk-tag--red">@milestone.Status</span>
                                            </td>
                                            <td class="govuk-table__cell">
                                                @if (milestone.Priority == "High")
                                                {
                                                    <span class="govuk-tag govuk-tag--red">High</span>
                                                }
                                                else if (milestone.Priority == "Medium")
                                                {
                                                    <span class="govuk-tag govuk-tag--yellow">Medium</span>
                                                }
                                                else
                                                {
                                                    <span class="govuk-tag govuk-tag--green">Low</span>
                                                }
                                            </td>
                                            <td class="govuk-table__cell">
                                                <a href="@Url.Action("Details", new { id = milestone.Id })" class="govuk-link">View Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="govuk-grid-row govuk-!-margin-top-4">
                        <div class="govuk-grid-column-full">
                            <div class="govuk-inset-text">
                                <p class="govuk-body">No overdue milestones found. All milestones are on track!</p>
                            </div>
                        </div>
                    </div>
                }

                <!-- Summary Statistics -->
                <div class="govuk-grid-row govuk-!-margin-top-6">
                    <div class="govuk-grid-column-full">
                        <h2 class="govuk-heading-m">Milestone Summary</h2>
                        <div class="govuk-grid-row">
                            <div class="govuk-grid-column-one-third">
                                <div class="govuk-card">
                                    <div class="govuk-card__content">
                                        <h3 class="govuk-heading-s">Total Milestones</h3>
                                        <p class="govuk-body-l govuk-!-font-weight-bold">@Model.Count()</p>
                                    </div>
                                </div>
                            </div>
                            <div class="govuk-grid-column-one-third">
                                <div class="govuk-card">
                                    <div class="govuk-card__content">
                                        <h3 class="govuk-heading-s">Overdue</h3>
                                        <p class="govuk-body-l govuk-!-font-weight-bold govuk-!-color-red">@ViewBag.OverdueCount</p>
                                    </div>
                                </div>
                            </div>
                            <div class="govuk-grid-column-one-third">
                                <div class="govuk-card">
                                    <div class="govuk-card__content">
                                        <h3 class="govuk-heading-s">On Track</h3>
                                        <p class="govuk-body-l govuk-!-font-weight-bold govuk-!-color-green">@(Model.Count() - (int)ViewBag.OverdueCount)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>