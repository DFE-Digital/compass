@model FipsReporting.Data.PerformanceMetric

@{
    ViewData["Title"] = "Create Performance Metric";
    ViewData["ActiveNav"] = "admin";
    ViewData["ActiveNavItem"] = "manage-metrics";
}

@section BeforeContent {
    <div class="dfe-masthead dfe-masthead--with-links">
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <span class="govuk-caption-l govuk-!-margin-top-6">COMPASS admin</span>
                    <h1 class="govuk-heading-xl">Create performance metric</h1>
                    <p class="govuk-body-l govuk-!-margin-bottom-0">Add a new performance metric to the reporting system.</p>
                </div>
            </div>
        </div>
    </div>
}

<div class="govuk-grid-row">
            <!-- Vertical Navigation -->
            <div class="govuk-grid-column-one-quarter">
                <nav class="dfe-vertical-nav" data-module="dfe-vertical-nav">
                    <ul class="dfe-vertical-nav__section">
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "dashboard" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "Admin")">
                                Dashboard
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "manage-metrics" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "AdminPerformanceMetrics")">
                                Manage Metrics
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "manage-users" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "AdminUser")">
                                Manage Users
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "manage-objectives" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "AdminObjectives")">
                                Manage Objectives
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="govuk-grid-column-three-quarters">
                <form method="post" asp-action="Create">
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="Name">
                            Metric Name <span class="govuk-required">*</span>
                        </label>
                        <input class="govuk-input" asp-for="Name" type="text" placeholder="e.g., User Satisfaction Score">
                        <span asp-validation-for="Name" class="govuk-error-message"></span>
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="Description">
                            Description
                        </label>
                        <textarea class="govuk-textarea" asp-for="Description" rows="3" placeholder="Describe what this metric measures and how it's calculated"></textarea>
                        <span asp-validation-for="Description" class="govuk-error-message"></span>
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="UniqueId">
                            Unique ID <span class="govuk-required">*</span>
                        </label>
                        <input class="govuk-input" asp-for="UniqueId" type="text" placeholder="e.g., USR-SAT-001">
                        <div class="govuk-hint">
                            A unique identifier for this metric (e.g., USR-SAT-001)
                        </div>
                        <span asp-validation-for="UniqueId" class="govuk-error-message"></span>
                    </div>

                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                                <h3 class="govuk-fieldset__heading">
                                    Category <span class="govuk-required">*</span>
                                </h3>
                            </legend>
                            <div class="govuk-radios" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="Category" type="radio" value="User Experience">
                                    <label class="govuk-label govuk-radios__label" for="Category_UserExperience">
                                        User Experience
                                    </label>
                                    <div class="govuk-hint govuk-radios__hint">
                                        Metrics related to user satisfaction and experience
                                    </div>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="Category" type="radio" value="Performance">
                                    <label class="govuk-label govuk-radios__label" for="Category_Performance">
                                        Performance
                                    </label>
                                    <div class="govuk-hint govuk-radios__hint">
                                        Metrics related to system performance and speed
                                    </div>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="Category" type="radio" value="Accessibility">
                                    <label class="govuk-label govuk-radios__label" for="Category_Accessibility">
                                        Accessibility
                                    </label>
                                    <div class="govuk-hint govuk-radios__hint">
                                        Metrics related to accessibility compliance
                                    </div>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="Category" type="radio" value="Security">
                                    <label class="govuk-label govuk-radios__label" for="Category_Security">
                                        Security
                                    </label>
                                    <div class="govuk-hint govuk-radios__hint">
                                        Metrics related to security and data protection
                                    </div>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="Category" type="radio" value="Compliance">
                                    <label class="govuk-label govuk-radios__label" for="Category_Compliance">
                                        Compliance
                                    </label>
                                    <div class="govuk-hint govuk-radios__hint">
                                        Metrics related to regulatory compliance
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <span asp-validation-for="Category" class="govuk-error-message"></span>
                    </div>


                    <div class="govuk-form-group">
                        <label class="govuk-label" for="Measure">
                            Measure <span class="govuk-required">*</span>
                        </label>
                        <input class="govuk-input" asp-for="Measure" type="text" placeholder="e.g., number, decimal, options_list, boolean">
                        <div class="govuk-hint">
                            The type of measurement for this metric (number, decimal, options_list, boolean)
                        </div>
                        <span asp-validation-for="Measure" class="govuk-error-message"></span>
                    </div>

                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                                <h3 class="govuk-fieldset__heading">
                                    Mandate
                                </h3>
                            </legend>
                            <div class="govuk-radios" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="Mandate" type="radio" value="Legal">
                                    <label class="govuk-label govuk-radios__label" for="Mandate_Legal">
                                        Legal
                                    </label>
                                    <div class="govuk-hint govuk-radios__hint">
                                        Required by law or legal regulation
                                    </div>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="Mandate" type="radio" value="DSIT">
                                    <label class="govuk-label govuk-radios__label" for="Mandate_DSIT">
                                        DSIT
                                    </label>
                                    <div class="govuk-hint govuk-radios__hint">
                                        Department for Science, Innovation and Technology requirement
                                    </div>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="Mandate" type="radio" value="DfE">
                                    <label class="govuk-label govuk-radios__label" for="Mandate_DfE">
                                        DfE
                                    </label>
                                    <div class="govuk-hint govuk-radios__hint">
                                        Department for Education requirement
                                    </div>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" asp-for="Mandate" type="radio" value="DDT">
                                    <label class="govuk-label govuk-radios__label" for="Mandate_DDT">
                                        DDT
                                    </label>
                                    <div class="govuk-hint govuk-radios__hint">
                                        Digital, Data and Technology requirement
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <span asp-validation-for="Mandate" class="govuk-error-message"></span>
                    </div>

                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                                Service stages
                            </legend>
                            <div class="govuk-hint">
                                Select which service stages this metric applies to.
                            </div>
                            <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                                @if (ViewBag.Phases != null)
                                {
                                    @foreach (var phase in ViewBag.Phases)
                                    {
                                        <div class="govuk-checkboxes__item">
                                            <input class="govuk-checkboxes__input" type="checkbox" name="SelectedPhases" value="@phase" id="phase_@phase">
                                            <label class="govuk-label govuk-checkboxes__label" for="phase_@phase">
                                                @phase
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" type="checkbox" name="SelectedPhases" value="Discovery" id="phase_Discovery">
                                        <label class="govuk-label govuk-checkboxes__label" for="phase_Discovery">
                                            Discovery (D)
                                        </label>
                                    </div>
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" type="checkbox" name="SelectedPhases" value="Alpha" id="phase_Alpha">
                                        <label class="govuk-label govuk-checkboxes__label" for="phase_Alpha">
                                            Alpha (A)
                                        </label>
                                    </div>
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" type="checkbox" name="SelectedPhases" value="Beta" id="phase_Beta">
                                        <label class="govuk-label govuk-checkboxes__label" for="phase_Beta">
                                            Beta (B)
                                        </label>
                                    </div>
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" type="checkbox" name="SelectedPhases" value="Live" id="phase_Live">
                                        <label class="govuk-label govuk-checkboxes__label" for="phase_Live">
                                            Live (L)
                                        </label>
                                    </div>
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" type="checkbox" name="SelectedPhases" value="Retired" id="phase_Retired">
                                        <label class="govuk-label govuk-checkboxes__label" for="phase_Retired">
                                            Retired (R)
                                        </label>
                                    </div>
                                }
                            </div>
                        </fieldset>
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="ValidationCriteria">
                            Validation criteria
                        </label>
                        <div class="govuk-hint">
                            Optional validation rules for this metric. Use key:value format separated by commas.
                        </div>
                        <details class="govuk-details">
                            <summary class="govuk-details__summary">
                                <span class="govuk-details__summary-text">
                                    Examples of validation criteria
                                </span>
                            </summary>
                            <div class="govuk-details__text">
                                <p class="govuk-body-s"><strong>For number ranges:</strong></p>
                                <code class="govuk-!-font-size-14">min:0,max:100</code>
                                
                                <p class="govuk-body-s govuk-!-margin-top-3"><strong>For option lists:</strong></p>
                                <code class="govuk-!-font-size-14">option 1,option 2,option 3</code>
                                
                                <p class="govuk-body-s govuk-!-margin-top-3"><strong>For percentage values:</strong></p>
                                <code class="govuk-!-font-size-14">min:0,max:100,type:percentage</code>
                                
                                <p class="govuk-body-s govuk-!-margin-top-3"><strong>For boolean values:</strong></p>
                                <code class="govuk-!-font-size-14">type:boolean</code>
                                
                                <p class="govuk-body-s govuk-!-margin-top-3"><strong>For decimal values:</strong></p>
                                <code class="govuk-!-font-size-14">min:0.0,max:5.0,decimals:1</code>
                            </div>
                        </details>
                        <textarea class="govuk-textarea" asp-for="ValidationCriteria" rows="3" placeholder="min:0,max:100 (optional)"></textarea>
                        <span asp-validation-for="ValidationCriteria" class="govuk-error-message"></span>
                    </div>

                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                                <h3 class="govuk-fieldset__heading">
                                    Metric Settings
                                </h3>
                            </legend>
                            <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                                <div class="govuk-checkboxes__item">
                                    <input class="govuk-checkboxes__input" asp-for="Mandatory" type="checkbox">
                                    <label class="govuk-label govuk-checkboxes__label" for="Mandatory">
                                        Mandatory metric
                                    </label>
                                    <div class="govuk-hint govuk-checkboxes__hint">
                                        This metric must be reported for all services.
                                    </div>
                                </div>
                                <div class="govuk-checkboxes__item">
                                    <input class="govuk-checkboxes__input" asp-for="Enabled" type="checkbox" checked>
                                    <label class="govuk-label govuk-checkboxes__label" for="Enabled">
                                        Enabled
                                    </label>
                                    <div class="govuk-hint govuk-checkboxes__hint">
                                        This metric is active and available for reporting.
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <div class="govuk-button-group">
                        <button class="govuk-button" type="submit">
                            Create Metric
                        </button>
                        <a class="govuk-button govuk-button--secondary" href="@Url.Action("Index")">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>

<style nonce="@Html.GetNonce()">
.stage-checkboxes {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.stage-checkbox-item {
    display: flex;
    align-items: center;
}

.stage-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
}

.stage-box {
    width: 32px;
    height: 32px;
    border: 2px solid #b1b4b6;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 14px;
    transition: all 0.2s ease;
}

.stage-d {
    background-color: #f3f2f1;
    color: #626a6e;
}

.stage-a {
    background-color: #f3f2f1;
    color: #626a6e;
}

.stage-b {
    background-color: #f3f2f1;
    color: #626a6e;
}

.stage-l {
    background-color: #f3f2f1;
    color: #626a6e;
}

.stage-r {
    background-color: #f3f2f1;
    color: #626a6e;
}

.stage-checkbox-item input[type="checkbox"]:checked + .stage-label .stage-d {
    background-color: #00703c;
    color: white;
    border-color: #00703c;
}

.stage-checkbox-item input[type="checkbox"]:checked + .stage-label .stage-a {
    background-color: #f47738;
    color: white;
    border-color: #f47738;
}

.stage-checkbox-item input[type="checkbox"]:checked + .stage-label .stage-b {
    background-color: #1d70b8;
    color: white;
    border-color: #1d70b8;
}

.stage-checkbox-item input[type="checkbox"]:checked + .stage-label .stage-l {
    background-color: #28a197;
    color: white;
    border-color: #28a197;
}

.stage-checkbox-item input[type="checkbox"]:checked + .stage-label .stage-r {
    background-color: #d4351c;
    color: white;
    border-color: #d4351c;
}
</style>

@section Scripts {
    <script nonce="@Html.GetNonce()">
        document.addEventListener('DOMContentLoaded', function() {
            // Add form validation or other JavaScript here if needed
        });
    </script>
}
