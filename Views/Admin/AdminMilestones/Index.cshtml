@model List<FipsReporting.Data.Milestone>

@{
    ViewData["Title"] = "Milestone Overview";
    ViewData["ActiveNav"] = "admin-milestones";
}

<div class="govuk-width-container">
    <div class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l">@ViewData["Title"]</h1>
                <p class="govuk-body-l">View and manage milestones across all products.</p>
            </div>
            <div class="govuk-grid-column-one-third">
                <a href="@Url.Action("Create")" class="govuk-button">Add New Milestone</a>
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                @if (Model != null && Model.Any())
                {
                    <table class="govuk-table">
                        <thead class="govuk-table__head">
                            <tr class="govuk-table__row">
                                <th scope="col" class="govuk-table__header">Title</th>
                                <th scope="col" class="govuk-table__header">Description</th>
                                <th scope="col" class="govuk-table__header">Due Date</th>
                                <th scope="col" class="govuk-table__header">Status</th>
                                <th scope="col" class="govuk-table__header">RAG Status</th>
                                <th scope="col" class="govuk-table__header">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="govuk-table__body">
                            @foreach (var milestone in Model)
                            {
                                <tr class="govuk-table__row">
                                    <td class="govuk-table__cell">
                                        <a href="@Url.Action("Details", new { id = milestone.Id })" class="govuk-link">
                                            @milestone.Title
                                        </a>
                                    </td>
                                    <td class="govuk-table__cell">@milestone.Description</td>
                                    <td class="govuk-table__cell">@(milestone.DueDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td class="govuk-table__cell">
                                        <span class="govuk-tag govuk-tag--@(milestone.Status.ToLower() == "completed" ? "green" : milestone.Status.ToLower() == "in-progress" ? "blue" : "grey")">
                                            @milestone.Status
                                        </span>
                                    </td>
                                    <td class="govuk-table__cell">
                                        <span class="govuk-tag govuk-tag--@(milestone.RagStatus.ToLower() == "green" ? "green" : milestone.RagStatus.ToLower() == "amber" ? "yellow" : "red")">
                                            @milestone.RagStatus
                                        </span>
                                    </td>
                                    <td class="govuk-table__cell">
                                        <a href="@Url.Action("Edit", new { id = milestone.Id })" class="govuk-link">Edit</a>
                                        <span class="govuk-body"> | </span>
                                        <a href="@Url.Action("Delete", new { id = milestone.Id })" class="govuk-link govuk-link--destructive">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="govuk-inset-text">
                        <p class="govuk-body">No milestones found.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
