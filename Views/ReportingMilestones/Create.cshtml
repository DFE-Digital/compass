@model FipsReporting.Data.Milestone

@{
    ViewData["Title"] = "Create Milestone";
    ViewData["ActiveNav"] = "reporting";
    ViewData["ActiveNavItem"] = "milestones";
}

@section BeforeContent {
    <div class="dfe-masthead dfe-masthead--with-links">
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <span class="govuk-caption-l govuk-!-margin-top-6">COMPASS reporting</span>
                    <h1 class="govuk-heading-xl">Create milestone</h1>
                    <p class="govuk-body-l govuk-!-margin-bottom-0">Add a new milestone for your service.</p>
                </div>
            </div>
        </div>
    </div>
}

<div class="govuk-width-container">
    <div class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <!-- Vertical Navigation -->
            <div class="govuk-grid-column-one-quarter">
                <nav class="dfe-vertical-nav" data-module="dfe-vertical-nav">
                    <ul class="dfe-vertical-nav__section">
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "dashboard" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Index", "Reporting")">
                                Dashboard
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "products" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Products", "Reporting")">
                                Your products
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "performance" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Performance", "Reporting")">
                                Performance reporting
                            </a>
                        </li>
                        <li class="dfe-vertical-nav__section-item @(ViewData["ActiveNavItem"]?.ToString() == "milestones" ? "dfe-vertical-nav__section-item--current" : "")">
                            <a class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="@Url.Action("Milestones", "Reporting")">
                                Milestones
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="govuk-grid-column-three-quarters">
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-two-thirds">
                        <h2 class="govuk-heading-l">Milestone details</h2>
                        <p class="govuk-body">Enter the details for the new milestone.</p>
                    </div>
                </div>

                <form method="post" asp-action="Create">
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="Title">
                            Title
                        </label>
                        <input class="govuk-input" id="Title" name="Title" type="text" asp-for="Title" />
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="Description">
                            Description
                        </label>
                        <textarea class="govuk-textarea" id="Description" name="Description" rows="5" asp-for="Description"></textarea>
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="DueDate">
                            Due date
                        </label>
                        <div class="govuk-hint">
                            Enter the date when this milestone should be completed
                        </div>
                        <input class="govuk-input" id="DueDate" name="DueDate" type="date" asp-for="DueDate" />
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="Status">
                            Status
                        </label>
                        <select class="govuk-select" id="Status" name="Status" asp-for="Status">
                            <option value="Not Started">Not Started</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                            <option value="On Hold">On Hold</option>
                        </select>
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="RagStatus">
                            RAG status
                        </label>
                        <select class="govuk-select" id="RagStatus" name="RagStatus" asp-for="RagStatus">
                            <option value="Green">Green</option>
                            <option value="Amber">Amber</option>
                            <option value="Red">Red</option>
                        </select>
                    </div>

                    <input type="hidden" name="ProductId" value="@ViewBag.ProductId" asp-for="ProductId" />

                    <div class="govuk-button-group">
                        <button class="govuk-button" data-module="govuk-button">
                            Create milestone
                        </button>
                        <a class="govuk-link" href="@Url.Action("Index", "ReportingMilestones", new { productId = ViewBag.ProductId })">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
