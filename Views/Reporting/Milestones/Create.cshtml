@model FipsReporting.Data.Milestone
@{
    ViewData["Title"] = "Create Milestone";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Create New Milestone</h4>
                <small class="text-muted">Product: @ViewBag.ProductId</small>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <input asp-for="ProductId" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Milestone Title *</label>
                        <input asp-for="Title" class="form-control" placeholder="e.g., Complete user research phase" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the milestone objectives and deliverables"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label">Due Date</label>
                        <input asp-for="DueDate" type="date" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                        <div class="form-text">Set a target completion date for this milestone</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Initial Status *</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Not Started">Not Started</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RagStatus" class="form-label">RAG Status</label>
                        <select asp-for="RagStatus" class="form-select">
                            <option value="">Select RAG status</option>
                            <option value="Red">Red - Major issues or delays</option>
                            <option value="Amber">Amber - Some concerns or minor delays</option>
                            <option value="Green">Green - On track or ahead of schedule</option>
                        </select>
                        <span asp-validation-for="RagStatus" class="text-danger"></span>
                        <div class="form-text">
                            <strong>Red:</strong> Major issues or delays<br>
                            <strong>Amber:</strong> Some concerns or minor delays<br>
                            <strong>Green:</strong> On track or ahead of schedule
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-route-productId="@Model.ProductId" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Create Milestone</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Milestone Guidelines</h5>
            </div>
            <div class="card-body">
                <h6>Good Milestone Characteristics</h6>
                <ul class="small">
                    <li><strong>Specific:</strong> Clear and well-defined objectives</li>
                    <li><strong>Measurable:</strong> Can be verified as complete</li>
                    <li><strong>Achievable:</strong> Realistic given resources and time</li>
                    <li><strong>Relevant:</strong> Aligned with product goals</li>
                    <li><strong>Time-bound:</strong> Has a clear due date</li>
                </ul>

                <h6>RAG Status Guidelines</h6>
                <ul class="small">
                    <li><strong>Red:</strong> Use when there are significant blockers or delays</li>
                    <li><strong>Amber:</strong> Use when there are minor issues or concerns</li>
                    <li><strong>Green:</strong> Use when everything is on track</li>
                </ul>

                <h6>Status Progression</h6>
                <p class="small">Typical progression: Not Started → In Progress → Completed</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
