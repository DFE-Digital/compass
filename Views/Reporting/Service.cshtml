@model FipsReporting.Models.ServiceReportingViewModel

@{
    ViewData["Title"] = $"Service Reporting - {Model.FipsId}";
    ViewData["ActiveNav"] = "reporting";
}

<style nonce="@Html.GetNonce()">
    .nav-margin-top {
        margin-top: 2rem;
    }
    .row-margin-bottom {
        margin-bottom: 2rem;
    }
    .rag-amber-card {
        background-color: #f47738;
        color: white;
    }
    .progress-green-card {
        background-color: #00703c;
        color: white;
    }
    .white-text {
        color: white;
    }
    .margin-bottom-small {
        margin-bottom: 0.5rem;
    }
    .margin-bottom-medium {
        margin-bottom: 1rem;
    }
    .tag-margin-right {
        margin-right: 0.5rem;
    }
    .white-button {
        background-color: white;
        color: #00703c;
    }
    .margin-right-medium {
        margin-right: 1rem;
    }
    .white-link {
        color: white;
    }
    .card-margin-bottom {
        margin-bottom: 2rem;
    }
    .hidden-section {
        display: none;
    }
</style>

<div class="govuk-width-container">
    <div class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <!-- Left Navigation -->
            <div class="govuk-grid-column-one-quarter">
                <nav class="dfe-vertical-nav">
                    <ul class="dfe-vertical-nav__section">
                        <li class="dfe-vertical-nav__section-item">
                            <a href="@Url.Action("Month", "Reporting", new { year = Model.Year, month = Model.Month.ToLower() })" class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline">
                                ‚Üê Back to @Model.FullMonthName
                            </a>
                        </li>
                    </ul>
                </nav>
                
                <nav class="dfe-vertical-nav nav-margin-top">
                    <h3 class="dfe-vertical-nav__title">Overview</h3>
                    <ul class="dfe-vertical-nav__section">
                        <li class="dfe-vertical-nav__section-item dfe-vertical-nav__section-item--current">
                            <a href="#milestones" class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" aria-current="page">Milestones</a>
                        </li>
                        <li class="dfe-vertical-nav__section-item">
                            <a href="#performance" class="dfe-vertical-nav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline">Performance</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="govuk-grid-column-three-quarters">
                <h1 class="govuk-heading-l">@Model.Product.Title</h1>
                <p class="govuk-body-l">@Model.FipsId - @Model.FullMonthName Reporting</p>

                <!-- RAG Status and Progress Cards -->
                <div class="govuk-grid-row row-margin-bottom">
                    <!-- RAG Status Card -->
                    <div class="govuk-grid-column-one-half">
                        <div class="govuk-card rag-amber-card">
                            <div class="govuk-card__content">
                                <h2 class="govuk-heading-m white-text">RAG Status</h2>
                                <h3 class="govuk-heading-xl white-text margin-bottom-small">Amber</h3>
                                <p class="govuk-body white-text margin-bottom-medium">No change from last month</p>
                                
                                <p class="govuk-body-s white-text">Last 4 months (oldest first):</p>
                                <div class="margin-bottom-medium">
                                    <span class="govuk-tag govuk-tag--green tag-margin-right">G</span>
                                    <span class="govuk-tag govuk-tag--green tag-margin-right">G</span>
                                    <span class="govuk-tag govuk-tag--red tag-margin-right">R</span>
                                    <span class="govuk-tag govuk-tag--yellow tag-margin-right">A</span>
                                </div>
                                
                                <p class="govuk-body-s white-text">
                                    Current: <span class="govuk-tag govuk-tag--yellow">A</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Progress Status Card -->
                    <div class="govuk-grid-column-one-half">
                        <div class="govuk-card progress-green-card">
                            <div class="govuk-card__content">
                                <h2 class="govuk-heading-m white-text">Progress Status</h2>
                                <h3 class="govuk-heading-xl white-text margin-bottom-small">On track</h3>
                                <p class="govuk-body white-text margin-bottom-medium">Next update due: @Model.DueDate.ToString("d MMMM yyyy")</p>
                                
                                <div class="margin-bottom-medium">
                                    <a href="#" class="govuk-button govuk-button--secondary white-button margin-right-medium">Submit monthly update</a>
                                </div>
                                
                                <p class="govuk-body-s white-text">
                                    <a href="#" class="govuk-link white-link">View previous updates</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Outcomes Section -->
                <div class="govuk-card card-margin-bottom">
                    <div class="govuk-card__content">
                        <h2 class="govuk-heading-m">Outcomes</h2>
                        <ul class="govuk-list govuk-list--bullet">
                            <li>Align our fees to ensure we have enough money to effectively regulate the industry</li>
                            <li>To ensure our internal capability is robust and agile to adapt to the changing environment</li>
                        </ul>
                    </div>
                </div>

                <!-- Milestones Section -->
                <div id="milestones">
                    <div class="govuk-card">
                        <div class="govuk-card__content">
                            <h2 class="govuk-heading-m">Milestones and progress</h2>
                            
                            <table class="govuk-table">
                                <thead class="govuk-table__head">
                                    <tr class="govuk-table__row">
                                        <th scope="col" class="govuk-table__header">Milestone</th>
                                        <th scope="col" class="govuk-table__header">Due</th>
                                        <th scope="col" class="govuk-table__header">Last month</th>
                                        <th scope="col" class="govuk-table__header">Current RAG</th>
                                        <th scope="col" class="govuk-table__header">Change</th>
                                    </tr>
                                </thead>
                                <tbody class="govuk-table__body">
                                    <tr class="govuk-table__row">
                                        <td class="govuk-table__cell">
                                            <a href="#" class="govuk-link">Agree the changes to the fees model within the GC</a>
                                        </td>
                                        <td class="govuk-table__cell">1 Apr 2021</td>
                                        <td class="govuk-table__cell">
                                            <span class="govuk-tag govuk-tag--yellow">AMBER</span>
                                        </td>
                                        <td class="govuk-table__cell">
                                            <span class="govuk-tag govuk-tag--green">GREEN</span>
                                        </td>
                                        <td class="govuk-table__cell">Improved</td>
                                    </tr>
                                    <tr class="govuk-table__row">
                                        <td class="govuk-table__cell">
                                            <a href="#" class="govuk-link">DCMS to agree with the changes to the fees model</a>
                                        </td>
                                        <td class="govuk-table__cell">1 Apr 2021</td>
                                        <td class="govuk-table__cell">
                                            <span class="govuk-tag govuk-tag--green">GREEN</span>
                                        </td>
                                        <td class="govuk-table__cell">
                                            <span class="govuk-tag govuk-tag--yellow">AMBER</span>
                                        </td>
                                        <td class="govuk-table__cell">Worsened</td>
                                    </tr>
                                    <tr class="govuk-table__row">
                                        <td class="govuk-table__cell">
                                            <a href="#" class="govuk-link">Publish our response to an industry consultation</a>
                                        </td>
                                        <td class="govuk-table__cell">1 Apr 2021</td>
                                        <td class="govuk-table__cell">
                                            <span class="govuk-tag govuk-tag--red">RED</span>
                                        </td>
                                        <td class="govuk-table__cell">
                                            <span class="govuk-tag govuk-tag--red">RED</span>
                                        </td>
                                        <td class="govuk-table__cell">Unchanged</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Performance Section -->
                <div id="performance" class="hidden-section">
                    <div class="govuk-card">
                        <div class="govuk-card__content">
                            <h2 class="govuk-heading-m">Performance Metrics</h2>
                            <p class="govuk-body">Complete performance metrics reporting for @Model.FullMonthName.</p>
                            
                            <div class="govuk-button-group">
                                <a href="@Url.Action("Performance", "Reporting", new { year = Model.Year, month = Model.Month.ToLower(), fipsId = Model.FipsId })" class="govuk-button">
                                    Report Performance Metrics
                                </a>
                            </div>
                            
                            <div class="govuk-inset-text">
                                <p class="govuk-body">Performance metrics reporting includes:</p>
                                <ul class="govuk-list govuk-list--bullet">
                                    <li>Key Performance Indicators (KPIs)</li>
                                    <li>Service level metrics</li>
                                    <li>User satisfaction scores</li>
                                    <li>Performance trends and analytics</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Simple navigation between sections
    document.addEventListener('DOMContentLoaded', function() {
        const milestonesLink = document.querySelector('a[href="#milestones"]');
        const performanceLink = document.querySelector('a[href="#performance"]');
        const milestonesSection = document.getElementById('milestones');
        const performanceSection = document.getElementById('performance');
        
        function showMilestones() {
            milestonesSection.style.display = 'block';
            performanceSection.style.display = 'none';
            milestonesLink.parentElement.classList.add('dfe-vertical-nav__section-item--current');
            performanceLink.parentElement.classList.remove('dfe-vertical-nav__section-item--current');
            milestonesLink.setAttribute('aria-current', 'page');
            performanceLink.removeAttribute('aria-current');
        }
        
        function showPerformance() {
            milestonesSection.style.display = 'none';
            performanceSection.style.display = 'block';
            performanceLink.parentElement.classList.add('dfe-vertical-nav__section-item--current');
            milestonesLink.parentElement.classList.remove('dfe-vertical-nav__section-item--current');
            performanceLink.setAttribute('aria-current', 'page');
            milestonesLink.removeAttribute('aria-current');
        }
        
        milestonesLink.addEventListener('click', function(e) {
            e.preventDefault();
            showMilestones();
        });
        
        performanceLink.addEventListener('click', function(e) {
            e.preventDefault();
            showPerformance();
        });
    });
</script>
