@{
    ViewData["Title"] = "COMPASS Reporting";
    ViewData["ActiveNav"] = "overview";

    ViewData["HideNav"] = true;
}

@section BeforeContent {

<div class="dfe-masthead dfe-masthead--home">
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l dfe-masthead--home-title">
          COMPASS reporting
        </h1>
        <p class="govuk-body-l dfe-masthead--home-content">
          Use this service to report on the compliance, outcomes, milestones, performance, assurance, standards, and strategy of your products and services.
        </p>
      </div>
    </div>
  </div>
</div>
}

<div class="govuk-width-container">
    <div class="govuk-main-wrapper">
        <!-- Features Section -->
        <section class="govuk-!-margin-bottom-8">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <h2 class="govuk-heading-l">Everything you need to report on digital services</h2>
                    <p class="govuk-body-l govuk-!-margin-bottom-6">Powerful tools designed specifically for government digital teams</p>
                </div>
            </div>
            
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    <div class="govuk-card govuk-!-margin-bottom-4">
                        <div class="govuk-card__content">
                            <h3 class="govuk-heading-m">Performance Metrics</h3>
                            <p class="govuk-body">Track user satisfaction, accessibility scores, and service availability with automated validation and compliance checks.</p>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>Monthly performance returns</li>
                                <li>Customisable metrics</li>
                                <li>Automated compliance checks</li>
                                <li>Real-time dashboards</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <div class="govuk-grid-column-one-third">
                    <div class="govuk-card govuk-!-margin-bottom-4">
                        <div class="govuk-card__content">
                            <h3 class="govuk-heading-m">Milestone Tracking</h3>
                            <p class="govuk-body">Monitor project milestones and deliverables with RAG status reporting and automated alerts for overdue items.</p>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>Project milestone tracking</li>
                                <li>RAG status reporting</li>
                                <li>Automated alerts</li>
                                <li>Progress visualisation</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <div class="govuk-grid-column-one-third">
                    <div class="govuk-card govuk-!-margin-bottom-4">
                        <div class="govuk-card__content">
                            <h3 class="govuk-heading-m">Compliance Reporting</h3>
                            <p class="govuk-body">Ensure your services meet government standards with comprehensive compliance reporting and audit trails.</p>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>Government standards compliance</li>
                                <li>Audit trail tracking</li>
                                <li>Automated reporting</li>
                                <li>Risk assessment tools</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Getting Started Section -->
        <section class="govuk-!-margin-bottom-8">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <h2 class="govuk-heading-l">Get started</h2>
                </div>
            </div>
            
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-half">
                    <div class="govuk-card">
                        <div class="govuk-card__content">
                            <h3 class="govuk-heading-m">New to COMPASS?</h3>
                            <p class="govuk-body">Learn how to use COMPASS reporting to track your digital services and meet compliance requirements.</p>
                            <a href="/reporting" class="govuk-button govuk-button--primary">
                                Start reporting
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="govuk-grid-column-one-half">
                    <div class="govuk-card">
                        <div class="govuk-card__content">
                            <h3 class="govuk-heading-m">Need help?</h3>
                            <p class="govuk-body">Find guidance on using COMPASS reporting, understanding metrics, and meeting compliance requirements.</p>
                            <a href="/help" class="govuk-button govuk-button--secondary">
                                View guidance
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Key Features -->
        <section class="govuk-!-margin-bottom-8">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <h2 class="govuk-heading-l">Key features</h2>
                </div>
            </div>
            
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-half">
                    <h3 class="govuk-heading-m">Automated Reporting</h3>
                    <p class="govuk-body">Set up automated monthly reports that pull data from your services and generate compliance reports automatically.</p>
                    
                    <h3 class="govuk-heading-m">Real-time Dashboards</h3>
                    <p class="govuk-body">Monitor your service performance with live dashboards that update as data changes across your services.</p>
                </div>
                
                <div class="govuk-grid-column-one-half">
                    <h3 class="govuk-heading-m">Custom Metrics</h3>
                    <p class="govuk-body">Define your own performance metrics and KPIs that matter most to your service and users.</p>
                    
                    <h3 class="govuk-heading-m">Integration Ready</h3>
                    <p class="govuk-body">Connect with your existing tools and services through our API to streamline data collection.</p>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="govuk-!-margin-bottom-8">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <div class="govuk-card govuk-card--primary">
                        <div class="govuk-card__content">
                            <h2 class="govuk-heading-m">Ready to start reporting?</h2>
                            <p class="govuk-body">Join teams across government who are already using COMPASS reporting to improve their digital services.</p>
                            <a href="/reporting" class="govuk-button govuk-button--secondary">
                                Access COMPASS reporting
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<style>
/* Modern card styling without border radius */
.govuk-card {
    background: #ffffff;
    border: 1px solid #b1b4b6;
    margin-bottom: 1rem;
}

.govuk-card__content {
    padding: 1.5rem;
}

.govuk-card--primary {
    background: #1d70b8;
    color: #ffffff;
    border: none;
}

.govuk-card--primary h2,
.govuk-card--primary p {
    color: #ffffff;
}

.govuk-card--primary .govuk-button--secondary {
    background: #ffffff;
    color: #1d70b8;
    border: 2px solid #ffffff;
}

.govuk-card--primary .govuk-button--secondary:hover {
    background: #f3f2f1;
    color: #1d70b8;
}
</style>